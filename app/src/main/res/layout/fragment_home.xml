<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/request_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginTop="@dimen/px10"
        android:text="登  录"
        android:padding="@dimen/px10"
        android:gravity="center"/>

    <TextView
        android:id="@+id/out_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginTop="@dimen/px10"
        android:text="退出登录"
        android:padding="@dimen/px10"
        android:gravity="center"/>

    <TextView
        android:id="@+id/request_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginTop="@dimen/px10"
        android:text="获取Banner图数据"
        android:padding="@dimen/px10"
        android:gravity="center"/>

    <TextView
        android:id="@+id/response_search_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginTop="@dimen/px10"
        android:text="获取搜索数据"
        android:padding="@dimen/px10"
        android:gravity="center"/>

    <TextView
        android:id="@+id/response_num_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginTop="@dimen/px10"
        android:text="获取账户角标数据"
        android:padding="@dimen/px10"
        android:gravity="center"/>

    <TextView
        android:id="@+id/response_account_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginTop="@dimen/px10"
        android:text="获取账户信息数据"
        android:padding="@dimen/px10"
        android:gravity="center"/>

    <TextView
        android:id="@+id/send_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginTop="@dimen/px10"
        android:text="发送验证码"
        android:padding="@dimen/px10"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/nickname_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/validate_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px10"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:text="验证用户名是否被注册"/>
    </LinearLayout>

    <TextView
        android:id="@+id/zxing_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginTop="@dimen/px10"
        android:text="条形码扫描"
        android:padding="@dimen/px10"
        android:gravity="center"/>


</LinearLayout>
